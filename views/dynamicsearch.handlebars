<div style="padding-top: 5.2rem">


    <script>
        $Lightning.use("c:DynamicSearch_LtngOut",    // name of the Lightning app
            function () {                  // Callback once framework and app loaded
                $Lightning.createComponent(
                    "c:DynamicSearch", // top-level component of your app
                    {
                        "objectApiName": "Candidate__c"
                    },                  // attributes to set on the component when created
                    "lightningLocator",   // the DOM location to insert the component
                    function (cmp) {
                        // callback when component is created and active on the page
                    }
                );

                

            },
            'https://sparklelightningcommunity.force.com/'  // Community endpoint
        );

    
        
        function rerenderLC( arrayIndex, newValue){
            var attribName = 'attrib' + (arrayIndex + 1);
            var testLtngOutWindow = window.opener.$A.get("e.c:ltngOut_Event");

            var myExternalEvent;
            if(window.opener.$A &&
                (myExternalEvent = window.opener.$A.get("e.c:ltngOut_Event"))) {
                    myExternalEvent.setParams({WhoFired:'SparklePublicWebsite - DynamicSearch'});
                    myExternalEvent.setParams({attribName:newValue});
                    myExternalEvent.fire();
                }

        }
        
    </script>

