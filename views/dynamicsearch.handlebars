                        <h2 id="entity-header" class="slds-nav-vertical__title slds-text-title_caps">Attributes</h2>
                        {{#each attributes}}
                            <div class="slds-form-element">
                                <label class="slds-form-element__label" for="input-id-01">{{attrs.name}}</label>
